<h1>Listing videos</h1>

<table class="admin">
  <tr>
    <th>Title</th>
    <th>Youtube</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @videos.each do |video| %>
  <tr>
    <td><%= video.title %></td>
	<td><%= link_to image_tag( "http://img.youtube.com/vi/" + video.youtube_id + "/2.jpg", :border => 0 ), 'videos/'+video.id.to_s %> </td>
    <td><%= link_to 'Edit', edit_video_path(video) %></td>
    <td><%= link_to 'Destroy', video, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

