<% provide(:title, 'Shows') %>

<h1>Listing shows</h1>
<h1>Upcoming Shows</h1>
<table>
  <tr>
    <th>Date</th>
    <th>Venue</th>
    <th>City</th>
    <th>Tickets</th>
    <th>FB Event</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @new_shows.each do |show| %>
  <tr>
    <td><a href="shows/<%= show.id %>"><%= show.date %></a></td>
    <td><a href="<%= show.venue_url %>" target="blank"><%= show.venue %></a></td>
    <td><%= show.city %></td>
    <td>
		<% if(!show.tickets_url.empty?) %>
			<a href="<%= show.tickets_url %>" target="blank">Tickets</a>
		<% end %>
	</td>
    <td>
		<% if(!show.facebook_url.empty?) %>
			<a href="<%= show.facebook_url %>" target="blank">FB Event</a></td>
		<% end %>
	</td>
	<td><%= link_to 'Details', show %></td>
    <td><%= link_to 'Edit', edit_show_path(show) %></td>
    <td><%= link_to 'Destroy', show, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>



