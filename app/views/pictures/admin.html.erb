<h1>Listing pictures</h1>



<div>
	<% (0..@tags.length-1).each do |i| %>
		<h2><%= @tags[i].tag%></h2>
		<% @pictures.each do |picture| %>
			<% if picture.tag == @tags[i].tag %>
				<p>
				<%= picture.tag %>
				<%= image_tag picture.photo.url(:thumb) %>
				<%= link_to 'Show', picture %>
				<%= link_to 'Edit', edit_picture_path(picture) %>
				<%= link_to 'Destroy', picture, confirm: 'Are you sure?', method: :delete %>
				</p>
			 <% end %> 
		<% end %>
		<hr />
	<% end %>
</div>



